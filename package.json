    "chai": "^4.2.0",
    "hardhat": "^2.8.0",
    "mocha": "^7.1.2",
    "prettier": "2.5.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "hardhat": "^2.0.0"
  },
  "dependencies": {
    "@nomiclabs/hardhat-docker": "^2.0.2",
    "huffc": "0.0.1"
  },
  "bugs": {
    "url": "https://github.com/nomiclabs/hardhat-ts-plugin-boilerplate/issues"
  },
  "homepage": "https://github.com/nomiclabs/hardhat-ts-plugin-boilerplate#readme",
