{
  "name": "hardhat-huff",
  "description": "This is a sample Hardhat plugin written in TypeScript. Creating a Hardhat plugin can be as easy as extracting a part of your config into a different file and publishing it to npm.",
  "version": "1.0.2",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JetJadeja/hardhat-huff.git"
  },
  "author": "",
  "license": "ISC",
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.6",
